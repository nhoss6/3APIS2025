{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/www",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles --forceExit",
    "test:win": "set NODE_OPTIONS=--experimental-vm-modules && jest --runInBand --detectOpenHandles --forceExit",
    "mocha-test": "mocha --timeout 5000",
    "coverage": "c8 --reporter=text --reporter=html npm run mocha-test"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "transform": {},
    "moduleFileExtensions": ["js", "json", "node"]
  },
  "c8": {
    "exclude": [
      "test/**",
      "bin/**",
      "db.js",
      "app.js",
      "node_modules/**"
    ],
    "include": [
      "models/**",
      "routes/**",
      "utils/**"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^17.2.3",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "~1.9.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "chai": "^6.2.0",
    "jest": "^29.7.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
